@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="mlogin.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	<title>modern login</title>
	<link href="~/css/main.css" rel="stylesheet" />
</head>

<body>
    <div id="container-login">
        <div id="title">
            <i class="material-icons lock">lock</i> Login
        </div>

        <form asp-action="Login" method="post">
            <div class="input">
                <div class="input-addon">
                </div>
                <input asp-for="Email" id="username" placeholder="Username" type="text" required class="validate form-control" autocomplete="off">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="clearfix"></div>

            <div class="input">
                <div class="input-addon">
                </div>
                <input asp-for="Password" id="password" placeholder="Password" type="password" required class="validate form-control" autocomplete="off">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="remember-me">
                <input asp-for="RememberMe" type="checkbox">
                <span style="color: #DDD">Remember Me</span>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>

            <input type="submit" value="Log In" class="btn btn-primary" />
        </form>

        <div class="forgot-password">
            <a href="#">Forgot your password?</a>
        </div>
        <div class="privacy">
            <a href="#">Privacy Policy</a>
        </div>

