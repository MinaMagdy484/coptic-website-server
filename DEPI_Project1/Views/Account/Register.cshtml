@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<link href="~/css/main.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<body>
    <div id="container-register">
        <div id="title">
            <i class="material-icons lock">lock</i> Register
        </div>

        <form asp-action="Register">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Email Input -->
            <div class="input">
                <div class="input-addon">
                    <i class="material-icons">email</i>
                </div>
                <input asp-for="Email" id="email" placeholder="Email" type="email" required class="validate" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="clearfix"></div>

            <!-- Username Input (Mapped to Name) -->
            <div class="input">
                <div class="input-addon">
                    <i class="material-icons">face</i>
                </div>
                <input asp-for="Name" id="username" placeholder="Username" type="text" required class="validate" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="clearfix"></div>

            <!-- Password Input -->
            <div class="input">
                <div class="input-addon">
                    <i class="material-icons">vpn_key</i>
                </div>
                <input asp-for="Password" id="password" placeholder="Password" type="password" required class="validate" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="clearfix"></div>

            <!-- Confirm Password Input -->
            <div class="input">
                <div class="input-addon">
                    <i class="material-icons">vpn_key</i>
                </div>
                <input asp-for="ConfirmPassword" id="confirm-password" placeholder="Confirm Password" type="password" required class="validate" autocomplete="off" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="clearfix"></div>

            <!-- User Type Radio Buttons (Student/Instructor) -->
            <div class="form-group">
                <label asp-for="UserType" class="control-label"></label>
                <div>
                    <input type="radio" asp-for="UserType" value="Student" /> Student
                    <input type="radio" asp-for="UserType" value="Instructor" /> Instructor
                </div>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>

            <!-- Terms of Service Checkbox -->
            <div class="remember-me">
                <input type="checkbox">
                <span style="color: #DDD">I accept the Terms of Service</span>
            </div>

            <!-- Register Button -->
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>


    </div>


</body>
