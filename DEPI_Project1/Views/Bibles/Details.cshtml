@model Bible

@{
    ViewData["Title"] = $"{ViewBag.BookName} {Model.Chapter}:{Model.Verse}";
    var relatedVerses = ViewBag.RelatedVerses as List<Bible>;
    var languageNames = ViewBag.LanguageNames as Dictionary<string, string>;
}

<div class="container-fluid py-4">
    <!-- Header with navigation -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5">
                <span class="text-primary">@ViewBag.BookName</span>
                <span class="text-secondary">@Model.Chapter:@Model.Verse</span>
            </h1>
            <p class="lead">
                <span class="badge bg-primary">@ViewBag.BookNameEN</span>
                <span class="badge bg-secondary">Chapter @Model.Chapter</span>
                <span class="badge bg-secondary">Verse @Model.Verse</span>
            </p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.BibleID" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Primary verse card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-gradient-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-book"></i> Primary Verse
                </h5>
                <div>
                    <span class="badge bg-light text-dark">
                        @(languageNames.ContainsKey(Model.Language) ? languageNames[Model.Language] : Model.Language)
                    </span>
                    <span class="badge bg-light text-dark">@Model.Edition</span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p class="fs-4">@Model.Text</p>
                @if (!string.IsNullOrEmpty(Model.Pronunciation))
                {
                    <p class="text-muted"><small><em>Pronunciation: @Model.Pronunciation</em></small></p>
                }
            </blockquote>
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle me-2"></i> @Model.Notes
                </div>
            }
            <div class="mt-2 text-muted">
                <small>Verse ID: @Model.BibleID</small>
            </div>
        </div>
    </div>

    <!-- Verse translations comparison -->
    <div class="card shadow-sm">
        <div class="card-header bg-gradient-secondary text-white">
            <h5 class="mb-0">
                <i class="bi bi-translate"></i> All Available Translations
                <small class="badge bg-light text-dark ms-2">@relatedVerses.Count translations</small>
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 15%;">Language</th>
                            <th style="width: 10%;">Edition</th>
                            <th>Text</th>
                            <th style="width: 15%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var verse in relatedVerses.OrderBy(v => v.Language).ThenBy(v => v.Edition))
                        {
                            <tr class="@(verse.BibleID == Model.BibleID ? "table-primary" : "")">
                                <td>
                                    <span class="d-block fw-bold">
                                        @(languageNames.ContainsKey(verse.Language) ? languageNames[verse.Language] : verse.Language)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@verse.Edition</span>
                                </td>
                                <td>
                                    <div class="verse-text">
                                        @verse.Text
                                    </div>
                                    @if (!string.IsNullOrEmpty(verse.Pronunciation))
                                    {
                                        <small class="text-muted"><em>@verse.Pronunciation</em></small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@verse.BibleID" class="btn btn-outline-primary" title="View as primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@verse.BibleID" class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                title="Delete" 
                                                onclick="prepareDelete(@verse.BibleID, '@verse.Language', '@verse.Edition')" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Delete confirmation modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this Bible verse?</p>
                    <p id="deleteDetails" class="fw-bold"></p>
                    <p class="text-danger"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" asp-action="Delete" method="post">
                        <input type="hidden" id="deleteId" name="id" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom styles for this page -->
<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }
    
    .bg-gradient-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
    }
    
    .bg-gradient-info {
        background: linear-gradient(135deg, #17a2b8 0%, #117a8b 100%);
    }
    
    .verse-text {
        font-size: 1.1rem;
    }
    
    blockquote {
        border-left: 4px solid #007bff;
        padding-left: 1rem;
    }
    
    .table-primary {
        background-color: rgba(0, 123, 255, 0.1) !important;
    }
    
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        margin-bottom: 1.5rem;
    }
    
    .badge {
        font-weight: 500;
        padding: 0.5em 0.8em;
    }
</style>

<!-- JavaScript for delete confirmation modal -->
<script>
    function prepareDelete(id, language, edition) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteDetails').textContent = `${language} - ${edition} (ID: ${id})`;
        
        // Configure form action to use the DeleteConfirmed action
        document.getElementById('deleteForm').action = '@Url.Action("DeleteConfirmed")';
    }
</script>