@model Dictionary

@{
    ViewData["Title"] = "Delete Dictionary";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Dictionary</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this dictionary?</h5>
                        <p class="mb-0">This action cannot be undone and will remove all associated references.</p>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="bi bi-hash"></i> ID
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">#@Model.ID</span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-book"></i> Dictionary Name
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Html.DisplayFor(model => model.DictionaryName)</strong>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-tag"></i> Abbreviation
                        </dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Abbreviation))
                            {
                                <span class="badge bg-info">@Model.Abbreviation</span>
                            }
                            else
                            {
                                <span class="text-muted">No abbreviation</span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-file-earmark-text"></i> Maximum Pages
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.MaxNumberOfPages.HasValue)
                            {
                                <span class="badge bg-success">@Model.MaxNumberOfPages pages</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-info-circle"></i> Details
                        </dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Detils))
                            {
                                <div class="border p-2 rounded bg-light">
                                    @Html.DisplayFor(model => model.Detils)
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No details</span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-sticky"></i> Notes
                        </dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <div class="border p-2 rounded bg-light">
                                    @Html.DisplayFor(model => model.Notes)
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No notes</span>
                            }
                        </dd>

                        @if (Model.DictionaryReferenceWords != null && Model.DictionaryReferenceWords.Any())
                        {
                            <dt class="col-sm-4">
                                <i class="bi bi-exclamation-circle text-warning"></i> References
                            </dt>
                            <dd class="col-sm-8">
                                <div class="alert alert-warning">
                                    <small><strong>Warning:</strong> This dictionary has @Model.DictionaryReferenceWords.Count() word references that will also be deleted.</small>
                                </div>
                            </dd>
                        }
                    </dl>

                    <hr>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
