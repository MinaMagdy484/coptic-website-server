@model WordMeaning

@{
    ViewData["Title"] = "ConfirmDeleteWordMeaningConfirmed";
}

<h1>Delete Word Meaning</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>WordMeaning</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Word)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Word.Word_text) <!-- Assuming WordText is the word's property -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meaning)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meaning.MeaningText) <!-- Assuming MeaningText is the correct property -->
        </dd>
    </dl>

    <form asp-action="DeleteConfirmedWordMeaning">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
