@model WordMeaning

@{
    ViewData["Title"] = "Select From Words";
}

<h1>Select From Words</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SelectFromWord" asp-route-meaningId="@ViewBag.MeaningId" asp-route-originalWordId="@ViewBag.WordId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Dropdown for selecting existing words -->
            <div class="form-group">
                <label for="WordID" class="control-label">Select Existing Word</label>
                <select asp-for="WordID" class="form-control" asp-items="ViewBag.Words"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Link Word" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.MeaningId">Back to Meaning Details</a>
    <a asp-controller="Words" asp-action="GoBack">Go Back</a>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
