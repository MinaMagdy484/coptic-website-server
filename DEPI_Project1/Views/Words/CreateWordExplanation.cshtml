@model WordExplanation

@{
    ViewData["Title"] = "Add Word Explanation";
}

<h2>Add Word Explanation</h2>

<form asp-action="CreateWordExplanation">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="WordID" />

    <div class="form-group">
        <label asp-for="Explanation" class="control-label"></label>
        <textarea asp-for="Explanation" class="form-control"></textarea>
        <span asp-validation-for="Explanation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Language"></label>
        <select asp-for="Language" class="form-control">
            @foreach (var item in ViewBag.Languages as SelectList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label"></label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Details" asp-controller="Words" asp-route-id="@Model.WordID">Back to Word</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
