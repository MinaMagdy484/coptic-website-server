@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> _signInManager
@using DEPI_Project1.ViewModels

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DEPI_Project1</title>

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/animate/animate.min.css" rel="stylesheet" />

 

</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Flexbox for full-height layout -->
    <header>
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
            <div class="container-fluid">
                <!-- Brand/Logo -->
                <a class="navbar-brand d-flex align-items-center px-4 px-lg-5" asp-area="" asp-controller="Home" asp-action="Index">
                    <img style="width: 60px; height: auto;" src="~/img/image.png" alt="Coptic Dictionary Logo" />
                </a>

                <!-- Hamburger Button for Mobile -->
                <button class="navbar-toggler me-4" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible Section -->
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav ms-auto me-4 mb-2 mb-lg-0">
                        @if (_signInManager.IsSignedIn(User))

                        {

                            if (User.IsInRole("Admin"))

                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="UserAccounts">Accounts</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Words" asp-action="Index">Words</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="WordExplanations" asp-action="Index">Word Explanations</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Meanings" asp-action="Index">Meanings</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="GroupWords" asp-action="Index">Groups</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="GroupExplanations" asp-action="Index">Group Explanations</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Bibles" asp-action="Index">Bible</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Dictionaries" asp-action="Index">DictionaryReference</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a></li>
                            }



                            if (User.IsInRole("Student"))

                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="StudentAdministration" asp-action="Courses">Profile</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Words" asp-action="Index">Words</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="WordExplanations" asp-action="Index">Word Explanations</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Meanings" asp-action="Index">Meanings</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="GroupWords" asp-action="Index">Groups</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="GroupExplanations" asp-action="Index">Group Explanations</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Bibles" asp-action="Index">Bible</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Dictionaries" asp-action="Index">DictionaryReference</a></li>
                            }



                            if (User.IsInRole("Instructor"))

                            {
                                @* Uncomment below if you enable Instructor profile *@
                                @* <li class="nav-item"><a class="nav-link text-dark" asp-controller="InstructorAdministration" asp-action="Courses">Profile</a></li> *@
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Words" asp-action="Index">Words</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="GroupWords" asp-action="Index">Groups</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Bibles" asp-action="Index">Bible</a></li>
                            }

                            <!-- Sign Out -->
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="SignOut" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark">Sign Out</button>
                                </form>
                            </li>
                        }

                        else

                        {
                            <li class="nav-item">
                                <a class="btn btn-primary py-2 px-4" asp-controller="Account" asp-action="Login">
                                    Login <i class="fa fa-arrow-right ms-2"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container flex-grow-1">
        <!-- Makes the main content stretch -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer (fixed to the bottom) -->
    <footer style="background-color: #333; color: white; text-align: center; padding: 20px; width: 100%; font-family: Arial, sans-serif; margin-top: auto;">
        <p>&copy; 2024 E_Learning. All rights reserved.</p>
        <p>
            <a href="/privacy-policy" style="color: #bbb; text-decoration: none; margin: 0 10px;">Privacy Policy</a> |
            <a href="/terms-of-service" style="color: #bbb; text-decoration: none; margin: 0 10px;">Terms of Service</a> |
            <a href="/contact-us" style="color: #bbb; text-decoration: none; margin: 0 10px;">Contact Us</a>
        </p>
        <p style="font-size: 14px; margin-top: 10px;">
            Follow us on:
            <a href="https://facebook.com" style="color: #3b5998; text-decoration: none;">Facebook</a>,
            <a href="https://twitter.com" style="color: #00aced; text-decoration: none;">Twitter</a>,
            <a href="https://instagram.com" style="color: #e4405f; text-decoration: none;">Instagram</a>
        </p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
<!-- Add this in the head section -->

<script src="https://cdn.jsdelivr.net/npm/howler@2.2.3/dist/howler.min.js"></script>
   

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
