            </div>
            <div class="form-group">
                <label asp-for="EtymologyWord" class="control-label"></label>
                <input asp-for="EtymologyWord" class="form-control" />
                <span asp-validation-for="EtymologyWord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etymology" class="control-label"></label>
                <input asp-for="Etymology" class="form-control" />
                <span asp-validation-for="Etymology" class="text-danger"></span>
            </div>
